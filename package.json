{
  "name": "ecommerce-api",
  "version": "0.1.0",
  "description": "API for an e-commerce application",
  "main": "index.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "dev": "node --import=tsx --watch --env-file=.env src/index.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "author": "Mihai Pistol",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/secret-manager": "^6.0.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.18",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/mihaipistol/ecommerce-api.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm lint",
      "pre-push": "npm test"
    }
  },
  "eslintConfig": {
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.mjs",
          "*.jsx",
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/": "off",
          "@typescript-eslint/ban-ts-comments": "off",
          "@typescript-eslint/ban-ts-ignore": "off",
          "@typescript-eslint/class-name-casting": "off",
          "@typescript-eslint/explicit-module-boundry-type": "off",
          "@typescript-eslint/interface-name-prefix": "off",
          "@typescript-eslint/member-delimiter-style": "off",
          "@typescript-eslint/no-unused-vars": "warn",
          "@typescript-eslint/no-use-before-define": "off",
          "@typescript-eslint/no-var-requires": "off",
          "consistent-return": "off",
          "eslint-plugin-import/no-unresolved": "off",
          "import/extensions": "off",
          "import/prefer-default-export": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "jsx-a11y/click-events-have-key-events": "off",
          "jsx-a11y/label-has-asociated-control": "off",
          "jsx-a11y/no-noninteractive-element-interactions": "off",
          "jsx-a11y/no-static-element-interactions": "off",
          "max-len": [
            "error",
            {
              "code": 80,
              "tabWidth": 2
            }
          ],
          "no-extraneous-dependencies": "off",
          "no-param-reassign": "off",
          "no-prototype-builtins": "off",
          "no-restricted-syntax": "off",
          "no-undef": "off",
          "no-underscore-dangle": "off",
          "no-unused-vars": "off",
          "no-use-before-definex": "off",
          "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ]
        }
      }
    ],
    "rules": {
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    }
  }
}
